{
  "name": "@markdown-comment/electron-app",
  "version": "0.1.0",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "watch": "tsc -w",
    "build": "tsc",
    "test:e2e": "playwright test",
    "package": "electron-builder"
  },
  "dependencies": {
    "@markdown-comment/core": "*"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.2.5",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "playwright-electron": "^0.5.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.markdown-comment.app",
    "productName": "Markdown Comment",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "renderer/**/*"
    ],
    "win": {
      "target": "portable"
    }
  }
